<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.scau.jodenhe.cpos.dao.PermissionMapper">
  <resultMap id="BaseResultMap" type="com.scau.jodenhe.cpos.entity.Permission">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="pId" jdbcType="BIGINT" property="pId" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="permissionSign" jdbcType="VARCHAR" property="permissionSign" />
    <result column="description" jdbcType="VARCHAR" property="description" />
  </resultMap>
  <sql id="sql_columns">
    id,pId,name,permissionSign,description
  </sql>
  <sql id="sql_where">
    <where>
      <if test="null != item.id and '' != item.id">and id = #{item.id}</if>
      <if test="null != item.pId and '' != item.pId">and pId = #{item.pId}</if>
      <if test="null != item.name and '' != item.name">and name = #{item.name}</if>
      <if test="null != item.permissionSign and '' != item.permissionSign">and permissionSign = #{item.permissionSign}</if>
      <if test="null != item.description and '' != item.description">and description = #{item.description}</if>
	</where>
  </sql>
  <select id="selectById" resultMap="BaseResultMap">
    select <include refid="sql_columns" /> from permission where id = #{id}
  </select>
  <select id="selectOne" resultMap="BaseResultMap">
    select <include refid="sql_columns" /> from permission <include refid="sql_where" />
  </select>
  <select id="selectList" resultMap="BaseResultMap">
    select <include refid="sql_columns" /> from permission <include refid="sql_where" />
  </select>
  <select id="selectPage" resultMap="BaseResultMap">
    select <include refid="sql_columns" /> from permission <include refid="sql_where" /> limit #{page.startRow}, #{page.pageSize}
  </select>
  <sql id="sql_save_columns">
    insert into permission(
	  <if test="null != item.pId"> pId</if>
	  <if test="null != item.name">, name</if>
	  <if test="null != item.permissionSign">, permissionSign</if>
	  <if test="null != item.description">, description</if>
	) values
  </sql>
  <sql id="sql_save_values">
    (
	  <if test="null != item.pId"> #{item.pId}</if>
	  <if test="null != item.name">, #{item.name}</if>
	  <if test="null != item.permissionSign">, #{item.permissionSign}</if>
	  <if test="null != item.description">, #{item.description}</if>
	)
  </sql>
  <insert id="save" keyProperty="item.id" useGeneratedKeys="true">
    <include refid="sql_save_columns" /><include refid="sql_save_values" />
  </insert>
  <insert id="batchSave">
    <foreach collection="list" index="index" item="item" open="" separator=";" close="">
	  <include refid="sql_save_columns" /><include refid="sql_save_values" />
	</foreach>
  </insert>
  <sql id="sql_update">
    update permission set id = #{item.id}
      <if test="null != item.pId">, pId = #{item.pId}</if>
      <if test="null != item.name">, name = #{item.name}</if>
      <if test="null != item.permissionSign">, permissionSign = #{item.permissionSign}</if>
      <if test="null != item.description">, description = #{item.description}</if>
	where id = #{item.id}
  </sql>
  <update id="update">
    <include refid="sql_update" />
  </update>
  <update id="batchUpdate">
    <foreach collection="list" index="index" item="item" open="" separator=";" close="">
	  <include refid="sql_update" />
	</foreach>
  </update>
  <delete id="delArray">
    delete from permission where id in
	<foreach collection="array" index="index" item="item" open="(" separator="," close=")">#{item}</foreach>
  </delete>
  <delete id="delList">
    delete from permission where id in
	<foreach collection="list" index="index" item="item" open="(" separator="," close=")">#{item}</foreach>
  </delete>
</mapper>