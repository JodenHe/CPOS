<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.scau.jodenhe.cpos.dao.InventoryMapper">
  <resultMap id="BaseResultMap" type="com.scau.jodenhe.cpos.entity.Inventory">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="goodsId" jdbcType="BIGINT" property="goodsId" />
    <result column="warehouseId" jdbcType="BIGINT" property="warehouseId" />
    <result column="quantity" jdbcType="INTEGER" property="quantity" />
    <result column="amount" jdbcType="DECIMAL" property="amount" />
    <result column="script" jdbcType="VARCHAR" property="script" />
    <result column="createTime" jdbcType="TIMESTAMP" property="createTime" />
  </resultMap>
  <sql id="sql_columns">
    id,goodsId,warehouseId,quantity,amount,script,createTime
  </sql>
  <sql id="sql_where">
    <where>
      <if test="null != item.id and '' != item.id">and id = #{item.id}</if>
      <if test="null != item.goodsId and '' != item.goodsId">and goodsId = #{item.goodsId}</if>
      <if test="null != item.warehouseId and '' != item.warehouseId">and warehouseId = #{item.warehouseId}</if>
      <if test="null != item.quantity and '' != item.quantity">and quantity = #{item.quantity}</if>
      <if test="null != item.amount and '' != item.amount">and amount = #{item.amount}</if>
      <if test="null != item.script and '' != item.script">and script = #{item.script}</if>
      <if test="null != item.createTime and '' != item.createTime">and createTime = #{item.createTime}</if>
	</where>
  </sql>
  <select id="selectById" resultMap="BaseResultMap">
    select <include refid="sql_columns" /> from inventory where id = #{id}
  </select>
  <select id="selectOne" resultMap="BaseResultMap">
    select <include refid="sql_columns" /> from inventory <include refid="sql_where" />
  </select>
  <select id="selectList" resultMap="BaseResultMap">
    select <include refid="sql_columns" /> from inventory <include refid="sql_where" />
  </select>
  <select id="selectPage" resultMap="BaseResultMap">
    select <include refid="sql_columns" /> from inventory <include refid="sql_where" /> limit #{page.startRow}, #{page.pageSize}
  </select>
  <sql id="sql_save_columns">
    insert into inventory(
	  <if test="null != item.goodsId"> goodsId</if>
	  <if test="null != item.warehouseId">, warehouseId</if>
	  <if test="null != item.quantity">, quantity</if>
	  <if test="null != item.amount">, amount</if>
	  <if test="null != item.script">, script</if>
	  <if test="null != item.createTime">, createTime</if>
	) values
  </sql>
  <sql id="sql_save_values">
    (
	  <if test="null != item.goodsId"> #{item.goodsId}</if>
	  <if test="null != item.warehouseId">, #{item.warehouseId}</if>
	  <if test="null != item.quantity">, #{item.quantity}</if>
	  <if test="null != item.amount">, #{item.amount}</if>
	  <if test="null != item.script">, #{item.script}</if>
	  <if test="null != item.createTime">, #{item.createTime}</if>
	)
  </sql>
  <insert id="save" keyProperty="item.id" useGeneratedKeys="true">
    <include refid="sql_save_columns" /><include refid="sql_save_values" />
  </insert>
  <insert id="batchSave">
    <foreach collection="list" index="index" item="item" open="" separator=";" close="">
	  <include refid="sql_save_columns" /><include refid="sql_save_values" />
	</foreach>
  </insert>
  <sql id="sql_update">
    update inventory set id = #{item.id}
      <if test="null != item.goodsId">, goodsId = #{item.goodsId}</if>
      <if test="null != item.warehouseId">, warehouseId = #{item.warehouseId}</if>
      <if test="null != item.quantity">, quantity = #{item.quantity}</if>
      <if test="null != item.amount">, amount = #{item.amount}</if>
      <if test="null != item.script">, script = #{item.script}</if>
      <if test="null != item.createTime">, createTime = #{item.createTime}</if>
	where id = #{item.id}
  </sql>
  <update id="update">
    <include refid="sql_update" />
  </update>
  <update id="batchUpdate">
    <foreach collection="list" index="index" item="item" open="" separator=";" close="">
	  <include refid="sql_update" />
	</foreach>
  </update>
  <delete id="delArray">
    delete from inventory where id in
	<foreach collection="array" index="index" item="item" open="(" separator="," close=")">#{item}</foreach>
  </delete>
  <delete id="delList">
    delete from inventory where id in
	<foreach collection="list" index="index" item="item" open="(" separator="," close=")">#{item}</foreach>
  </delete>
</mapper>